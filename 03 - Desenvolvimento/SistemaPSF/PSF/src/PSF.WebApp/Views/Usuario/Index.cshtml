@using PSF.Dominio.Entities;




@model IEnumerable<Usuario>
<div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-action="Inserir" asp-controller="Usuario">Adicionar novo usuário</a>
    </div>
    <br />

    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @Html.Raw(TempData["MensagemSucesso"])
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @Html.Raw(TempData["MensagemErro"])
        </div>
    }

    <table class="table table-striped table-sm" id="table-usuarios">
        <thead class="br-list horizontal" role="list" color="blue">
            <br />
            <tr class="header">
                <div class="title">
                    <h2>Listagem de Usuários Cadastrados</h2>        
                </div>
                <br />
                <th class="br-item" role="listitem"><b>Nome</b></th>
                <th class="br-item" role="listitem"><b>CPF</b></th>
                <th class="br-item" role="listitem"><b>Email</b></th>              
                <th class="br-item" role="listitem"><b>Endereço</b></th>
                <th class="br-item" role="listitem"><b>Bairro</b></th>
                <th class="br-item" role="listitem"><b>ESF</b></th>
                <th class="br-item" role="listitem"><b>Status</b></th>
                <th class="br-item" role="listitem"><b>Perfil</b></th>
                <th class="br-item" role="listitem"><b>Editar</b>
                </th>
                <span class="br-divider"></span>
            </tr>
        </thead>

        <tbody class="header">
            @foreach (var item in Model)
            {
                <tr tr class="br-list horizontal">
                    <td class="br-item" role="listitem">@item.Nome </td>
                    <td class="br-item" role="listitem">@item.CPF</td>
                    <td class="br-item" role="listitem"> @item.Email</td>
                    <td class="br-item" role="listitem">@item.Esf.Enderecos.Rua, @item.Esf.Enderecos.Numero</td>
                    <td class="br-item" role="listitem">@item.Esf.Enderecos.Bairro</td>
                    <td class="br-item" role="listitem">@item.EsfId - @item.Esf.Nome</td>
                    <td class="br-item" role="listitem">
                        @if (item.Status)
                        {
                            <span class="text-success">Ativo</span>
                        }
                        else
                        {
                            <span class="text-danger">Inativo</span>
                        }
                    </td>
                    <td class="br-item" role="listitem">
                        @(item.Perfil == PSF.Dominio.Entities.UsuarioTipo.Admin ? "Admin" : "Padrão")
                    </td>
                    <td class="br-item" role="listitem">     
                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                            <!-- BOTÃO DE EXCLUIR USUARIO
                            <a class="btn btn-danger btn-xs delete-button" asp-action="Excluir" asp-controller="Usuario" asp-route-usuarioId="@item.UsuarioId"><i class="fa fa-trash" aria-hidden="false"></i></a>
                            <br>-->
                            <a asp-action="Editar" asp-controller="Usuario" asp-route-usuarioId="@item.UsuarioId"class="btn btn-secondary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-gear-fill" viewBox="0 0 16 16">
                                    <path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z" />
                                </svg>
                            </a>
                        </div>          
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <!-- ALERTA DE CONFIRMAR EXCLUSÃO USUARIO
    <div class="modal fade" id="confirm-delete-modal" tabindex="-1" role="dialog" aria-labelledby="confirm-delete-modal-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirm-delete-modal-label">Confirmar Exclusão</h5>
                    <a asp-action="Index" asp-controller="Usuario" class="btn-close" aria-label="Close"></a>
                </div>

                <div class="modal-body">
                    Tem certeza de que deseja excluir este usuário?
                </div>
                <div class="modal-footer">
                    <a asp-action="Index" asp-controller="Usuario" class="btn btn-secondary" data-dismiss="modal">Cancelar</a>
                    <a class="btn btn-danger" id="confirm-delete-button" href="#">Excluir</a>
                </div>
            </div>
        </div>
    </div>
    -->
</div>


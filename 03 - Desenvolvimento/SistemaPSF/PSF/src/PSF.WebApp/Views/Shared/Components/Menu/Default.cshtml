<style>
    #sidebar {
        transition: margin-left 0.3s;
        position: fixed;
        top: 0;
        left: 0;
        bottom: 0;
        z-index: 1000;
        width: 1px;
        padding-top: 50px; 
      
    }

        #sidebar .navbar-brand {
            width: 50%;
            text-align: center;
            margin-bottom: 20px; /* Adicionado para espaçamento entre a imagem e os links */
        }

        #sidebar ul {
            width: 100%;
        }

            #sidebar ul li {
                width: 100%;
               
            }

    main {
        margin-left: 20px; /* Ajuste conforme a largura da barra lateral */
    }

    #content {
        transition: margin-left 0.2s;
        
    }

    #toggle-btn {
        cursor: pointer;
        color: black;
        border: none;
        background-color: transparent;
        
        
    }

        #sidebar .nav-link svg{
            margin-right: 10px;
            margin-left: 9px;
            margin-bottom: 50px;
        
        }
        
    
 

    }
    .teste
    {
        margin-left: 90%;

    }

</style>
<script>
    document.getElementById('toggle-btn').addEventListener('click', function () {
        var sidebar = document.getElementById('sidebar');
        var content = document.getElementById('content');

        if (sidebar.style.marginLeft === '0px') {
            sidebar.style.marginLeft = '-60px'; /* ou o valor que preferir para esconder completamente */
            content.style.marginLeft = '0';
        } else {
            sidebar.style.marginLeft = '0';
            content.style.marginLeft = '200px'; /* ou o valor que preferir para dar espaço ao menu */
        }
    });
</script>
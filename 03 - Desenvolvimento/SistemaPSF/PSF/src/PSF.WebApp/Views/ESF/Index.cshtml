@using PSF.Dominio.Entities;
@model IEnumerable<ESF>
<div >
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-action="Inserir" asp-controller="Esf" style="width:200px;">
            <b>Adicionar</b>
            
            <svg xmlns="http://www.w3.org/2000/svg" width="23" height="20" fill="currentColor" class="bi bi-house-add-fill" viewBox="0 0 16 16">
                <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m.5-5v1h1a.5.5 0 0 1 0 1h-1v1a.5.5 0 1 1-1 0v-1h-1a.5.5 0 1 1 0-1h1v-1a.5.5 0 0 1 1 0" />
                <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293z" />
                <path d="m8 3.293 4.712 4.712A4.5 4.5 0 0 0 8.758 15H3.5A1.5 1.5 0 0 1 2 13.5V9.293l6-6Z" />
            </svg>
        </a>
    </div>
    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @Html.Raw(TempData["MensagemSucesso"])
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @Html.Raw(TempData["MensagemErro"])
        </div>
    }
    </br>
    <table class="table table-striped table-sm" id="table-usuarios">
        <thead class="br-list horizontal" role="list" color="blue">
            <tr class="header">
                <div class="title">
                    <h2>Listagem de Endereços Cadastrados</h2>
                </div>
                <br />
                <th class="br-item" role="listitem"><b>Nome ESF</b></th>
                <th class="br-item" role="listitem"><b>Endereços</b></th>
                <th class="br-item" role="listitem"><b>Numero </b></th>
                <th class="br-item" role="listitem"><b>CEP</b></th>
                <th class="br-item" role="listitem"><b>Bairro</b></th>
                <th class="br-item" role="listitem"><b>Estado</b></th>
                <th class="br-item" role="listitem"><b>Cidade</b></th>
                <th class="br-item" role="listitem"><b>Status</b></th>
                <th class="br-item" role="listitem"><b>Editar</b>
                </th>
                <span class="br-divider"></span>
            </tr>
        </thead>

        <tbody class="header">
            @foreach (var item in Model)
            {
                <tr tr class="br-list horizontal">
                    <td class="br-item" role="listitem">@item.EsfId - @item.Nome</td>
                    <td class="br-item" role="listitem">@item.Enderecos.Rua</td>
                    <td class="br-item" role="listitem">@item.Enderecos.Numero </td>
                    <td class="br-item" role="listitem">@item.Enderecos.Cep</td>
                    <td class="br-item" role="listitem"> @item.Enderecos.Bairro</td>
                    <td class="br-item" role="listitem"> @item.Enderecos.Estado.Nome</td>
                    <td class="br-item" role="listitem"> @item.Enderecos.Cidade.Nome</td>
                    <td class="br-item" role="listitem">
                        @if (item.Status)
                        {
                            <span class="text-success">Ativo</span>
                        }
                        else
                        {
                            <span class="text-danger">Inativo</span>
                        }
                    </td>                   
                    <td class="br-item" role="listitem">
                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                            <a asp-action="Inserir" asp-controller="Esf" asp-route-usuarioId="@item.EsfId" class="btn btn-secondary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-house-gear" viewBox="0 0 16 16">
                                    <path d="M7.293 1.5a1 1 0 0 1 1.414 0L11 3.793V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v3.293l2.354 2.353a.5.5 0 0 1-.708.708L8 2.207l-5 5V13.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 1 0 1h-4A1.5 1.5 0 0 1 2 13.5V8.207l-.646.647a.5.5 0 1 1-.708-.708z" />
                                    <path d="M11.886 9.46c.18-.613 1.048-.613 1.229 0l.043.148a.64.64 0 0 0 .921.382l.136-.074c.561-.306 1.175.308.87.869l-.075.136a.64.64 0 0 0 .382.92l.149.045c.612.18.612 1.048 0 1.229l-.15.043a.64.64 0 0 0-.38.921l.074.136c.305.561-.309 1.175-.87.87l-.136-.075a.64.64 0 0 0-.92.382l-.045.149c-.18.612-1.048.612-1.229 0l-.043-.15a.64.64 0 0 0-.921-.38l-.136.074c-.561.305-1.175-.309-.87-.87l.075-.136a.64.64 0 0 0-.382-.92l-.148-.044c-.613-.181-.613-1.049 0-1.23l.148-.043a.64.64 0 0 0 .382-.921l-.074-.136c-.306-.561.308-1.175.869-.87l.136.075a.64.64 0 0 0 .92-.382l.045-.148ZM14 12.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0" />
                                </svg>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


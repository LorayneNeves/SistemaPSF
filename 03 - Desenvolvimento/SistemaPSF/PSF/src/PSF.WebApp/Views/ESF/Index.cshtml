@using PSF.Dominio.Entities;
@model IEnumerable<ESF>
<div >
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-action="Inserir" asp-controller="Esf" style="width:30%;">
            <b>Adicionar</b>
            
            <svg xmlns="http://www.w3.org/2000/svg" width="23" height="20" fill="currentColor" class="bi bi-house-add-fill" viewBox="0 0 16 16">
                <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m.5-5v1h1a.5.5 0 0 1 0 1h-1v1a.5.5 0 1 1-1 0v-1h-1a.5.5 0 1 1 0-1h1v-1a.5.5 0 0 1 1 0" />
                <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293z" />
                <path d="m8 3.293 4.712 4.712A4.5 4.5 0 0 0 8.758 15H3.5A1.5 1.5 0 0 1 2 13.5V9.293l6-6Z" />
            </svg>
        </a>
    </div>
    
    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @Html.Raw(TempData["MensagemSucesso"])
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @Html.Raw(TempData["MensagemErro"])
        </div>
    }
    </br>
    <table class="table table-striped table-hover table-bordered" id="table-usuarios">
        <thead lass="br-list horizontal cabeçalho-tabela" role="list" color="blue">
            <tr cclass="table-success">
                <div class="title">
                    <h2 class="text-primary"><b>Listagem de Endereços Cadastrados</b></h2>
                </div>
                <br />
                <th class="table-secondary" role="listitem"><b>Nome ESF</b></th>
                <th class="table-secondary" role="listitem"><b>Endereços</b></th>
                <th class="table-secondary" role="listitem"><b>Numero </b></th>
                <th class="table-secondary" role="listitem"><b>CEP</b></th>
                <th class="table-secondary" role="listitem"><b>Bairro</b></th>
                <th class="table-secondary" role="listitem"><b>Estado</b></th>
                <th class="table-secondary" role="listitem"><b>Cidade</b></th>
                <th class="table-secondary" role="listitem"><b>Status</b></th>
                <th class="table-secondary" role="listitem">
                    <b>Editar</b>
                </th>
                <span class="br-divider"></span>
            </tr>
        </thead>

        <tbody class="header">
            @foreach (var item in Model)
            {
                <tr tr class="br-list horizontal">
                    <td class="table-light" role="listitem">@item.EsfId - @item.Nome</td>
                    <td class="table-light" role="listitem">@item.Enderecos.Rua</td>
                    <td class ="table-light" role="listitem">@item.Enderecos.Numero </td>
                    <td class="table-light" role="listitem">@item.Enderecos.Cep</td>
                    <td class="table-light" role="listitem"> @item.Enderecos.Bairro</td>
                    <td class="table-light" role="listitem"> @item.Enderecos.Estado.Nome</td>
                    <td class="table-light" role="listitem"> @item.Enderecos.Cidade.Nome</td>
                    <td class="table-light" role="listitem">
                        @if (item.Status)
                        {
                            <span style="padding:24px;" class="text-success">
                                <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" fill="green" class="bi bi-circle-fill" viewBox="0 0 16 16">
                                    <circle cx="8" cy="8" r="8" />
                                </svg>
                            </span>
                        }
                        else
                        {
                            <span style="padding:24px;" class="text-danger">
                                <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" fill="red" class="bi bi-circle-fill" viewBox="0 0 16 16">
                                    <circle cx="8" cy="8" r="8" />
                                </svg>
                            </span>
                        }
                    </td>
                    <td class="table-light" role="listitem">
                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                            <a asp-action="Editar" asp-controller="Esf" asp-route-esfId="@item.EsfId" class="btn btn-secondary" style="width:70px">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-gear-fill" viewBox="0 0 16 16">
                                    <path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z" />
                                </svg>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


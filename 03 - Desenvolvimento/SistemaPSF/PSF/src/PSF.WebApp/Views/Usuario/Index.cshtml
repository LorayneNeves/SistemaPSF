@using PSF.Dominio.Entities;
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Raleway:300,400,500,600,700,800,900&amp;display=swap" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Listagem de Usuários</title>
</head>


@model IEnumerable<Usuario>
<div>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-action="Inserir" asp-controller="Usuario">Adicionar novo usuário</a>
    </div>
    <br>
    <br />

    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @Html.Raw(TempData["MensagemSucesso"])
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @Html.Raw(TempData["MensagemErro"])
        </div>
    }

    <table class="table table-striped table-sm" id="table-usuarios">
        <thead class="br-list horizontal" role="list" color="blue">
            <tr class="header">
                <br>
                <div class="title">
                    <h2>Listagem de Usuários Cadastrados</h2>
                    
                </div>
                <br />
                <th class="br-item" role="listitem"><b>Código Funcionário</b></th>
                <th class="br-item" role="listitem"><b>Nome</b></th>
                <th class="br-item" role="listitem"><b>CPF</b></th>
                <th class="br-item" role="listitem"><b>Email</b></th>
                <th class="br-item" role="listitem"><b>Status</b></th>
                <th class="br-item" role="listitem"><b>Perfil</b></th>
                <th class="br-item" role="listitem"><b>Ações</b></th>

                <span class="br-divider"></span>
            </tr>
        </thead>

        <tbody class="header">
            @foreach (var item in Model)
            {
                <tr tr class="br-list horizontal">
                    <td class="br-item" role="listitem">@item.UsuarioId</td>

                    <td class="br-item" role="listitem">@item.Nome </td>

                    <td class="br-item" role="listitem">@item.CPF</td>

                    <td class="br-item" role="listitem"> @item.Email</td>

                    <td class="br-item" role="listitem">
                        @if (item.Status)
                        {
                            <span class="text-success">Ativo</span>
                        }
                        else
                        {
                            <span class="text-danger">Inativo</span>
                        }
                    </td>
                    <td class="br-item" role="listitem">
                        @(
                        item.Perfil == PSF.Dominio.Entities.UsuarioTipo.Admin ? "Admin" : "Padrão")
                    </td>
                    <td class="br-item" role="listitem">
                        
                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                            <a class="btn btn-danger btn-xs delete-button" asp-action="Excluir" asp-controller="Usuario" asp-route-usuarioId="@item.UsuarioId"><i class="fa fa-trash" aria-hidden="false"></i></a>
                            <br>

                            <a asp-action="Inserir" asp-controller="Usuario" asp-route-usuarioId="@item.UsuarioId"
                               class="btn btn-secondary">Editar</a>

                        </div>
                      
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <div class="modal fade" id="confirm-delete-modal" tabindex="-1" role="dialog" aria-labelledby="confirm-delete-modal-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirm-delete-modal-label">Confirmar Exclusão</h5>
                    <a asp-action="Index" asp-controller="Usuario" class="btn-close" aria-label="Close"></a>
                </div>

                <div class="modal-body">
                    Tem certeza de que deseja excluir este usuário?
                </div>
                <div class="modal-footer">
                    <a asp-action="Index" asp-controller="Usuario" class="btn btn-secondary" data-dismiss="modal">Cancelar</a>
                    <a class="btn btn-danger" id="confirm-delete-button" href="#">Excluir</a>
                </div>
            </div>
        </div>
    </div>
</div>

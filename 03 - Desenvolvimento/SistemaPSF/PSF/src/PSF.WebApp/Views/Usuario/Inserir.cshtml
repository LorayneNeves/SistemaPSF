@model Usuario

<form asp-action="InserirConfirmar" asp-controller="Usuario" method="POST" class="row g-3 needs-validation">

  <div class="col-md-4">
    <label for="validationCustom01" class="form-label">Nome Completo</label>
            <input type="text" asp-for="Nome" class="form-control" id="validationCustom01" required>
    <div class="valid-feedback">

            Bom!
    </div>
  </div>

  <div class="col-md-4">
    <label for="validationCustom02" class="form-label">CPF</label>
            <input type="text" class="form-control" id="validationCustom02" asp-for="CPF" required>
    <div class="valid-feedback">

      Bom!
    </div>
  </div>

  <div class="col-md-4">
    <label for="validationCustomUsername" class="form-label">Email:</label>
    <div class="input-group has-validation">
      <span class="input-group-text" id="inputGroupPrepend"></span>
                <input type="text" class="form-control" id="validationCustomUsername" asp-for="Email" required placeholder="exemplo: anamaria@gmail.com">
      <div class="invalid-feedback">
        Favor informe um e-mail de contato, esta informação será importante mais tarde.
      </div>
    </div>
  </div>
    <div class="form-group">
        <label for="EstadoId">Estado</label>
        @Html.DropDownListFor(model => model.EstadoId, new SelectList(ViewBag.Estados, "EstadoId", "Nome"), "Selecione um estado", new { @class = "form-control" })

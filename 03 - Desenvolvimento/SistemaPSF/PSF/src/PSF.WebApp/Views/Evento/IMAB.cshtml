@using PSF.Dominio.ValueObjects;
@model IEnumerable<Evento>
<div>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h2 class="text-center">Selecione o Mês e Ano</h2>

                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="selectMes">Mês</label>
                            <select id="selectMes" class="form-control">
                                <option value="01">Janeiro</option>
                                <option value="02">Fevereiro</option>
                                <option value="03">Março</option>
                                <option value="04">Abril</option>
                                <option value="05">Maio</option>
                                <option value="06">Junho</option>
                                <option value="07">Julho</option>
                                <option value="08">Agosto</option>
                                <option value="09">Setembro</option>
                                <option value="10">Outubro</option>
                                <option value="11">Novembro</option>
                                <option value="12">Dezembro</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="selectAno">Ano</label>
                            <select id="selectAno" class="form-control">
                                <!-- Adicione opções de anos conforme necessário -->
                                <option value="2022">2022</option>
                                <option value="2023">2023</option>
                                <option value="2024">2024</option>
                            </select>
                        </div>
                    </div>

                    <!-- Adicione aqui qualquer outra coisa que você precise no formulário -->

                    <button type="submit" class="btn btn-primary">Enviar</button>
                </form>
            </div>
        </div>
    </div>
    <br />
    <table class="table table-striped table-sm" id="table-usuarios">
        <thead class="br-list horizontal" role="list" color="blue">
            <tr class="header">
                <div class="title">
                    <h2>Listagem de Indicadores Cadastrados</h2>
                </div>
                <br />
                <th class="br-item" role="listitem"><b>Indicadores</b></th>
                <th class="br-item" role="listitem"><b>Tipo</b></th>
                <th class="br-item" role="listitem"><b>Status</b></th>
                <th class="br-item" role="listitem">
                    <b>Editar</b>
                    <span class="br-divider"></span>
            </tr>
        </thead>
        <tbody class="header">
            @foreach (var item in Model)
            {
                <tr tr class="br-list horizontal">
                    <td class="br-item" role="listitem">@item.Indicador.Titulo</td>
                    <td class="br-item" role="listitem">@item.Indicador.IndicadorTipo</td>

                    
                </tr>
            }
        </tbody>

    </table>
</div>
<script src="~/js/site.js"></script>

